<a href="./todos/new">Create</a>

<ul>
  {{#each todos}}
    <li>
      <input type="checkbox" name="isDone" {{#if this.isDone}} checked {{/if}} disabled>
      {{this.name}}
      <a href="./todos/{{this._id}}">Detail</a>
      <a href="./todos/{{this._id}}?_method=PUT">Edit</a>
      <form
        action="/todos/{{this._id}}?_method=DELETE"
        method="POST"
        style="display: inline;"
      >
        <button type="submit">Delete</button>
      </form>
    </li>
  {{/each}}
</ul>